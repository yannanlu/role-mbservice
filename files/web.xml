<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE web-app
PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
"http://java.sun.com/j2ee/dtds/web-app_2_3.dtd">

<web-app>
 <display-name>RestService</display-name>
 <context-param>
   <param-name>webAppRootKey</param-name>
   <param-value>mbservice.root</param-value>
 </context-param>
 <servlet>
   <servlet-name>rest</servlet-name>
   <servlet-class>org.qbroker.flow.QServlet</servlet-class>
   <init-param>
     <param-name>ConfigFile</param-name>
     <param-value>/opt/qbroker/flow/MB/Flow.json</param-value>
   </init-param>
   <init-param>
     <param-name>LoggerName</param-name>
     <param-value>QFlow_MB</param-value>
   </init-param>
   <init-param>
     <param-name>RestURI</param-name>
     <param-value>/gw</param-value>
   </init-param>
   <init-param>
     <param-name>Timeout</param-name>
     <param-value>600</param-value>
   </init-param>
   <load-on-startup>10</load-on-startup>
 </servlet>
 <servlet-mapping>
   <servlet-name>rest</servlet-name>
   <url-pattern>/rest/*</url-pattern>
 </servlet-mapping>
 <servlet-mapping>
   <servlet-name>rest</servlet-name>
   <url-pattern>/file/*</url-pattern>
 </servlet-mapping>
</web-app>
